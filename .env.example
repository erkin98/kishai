# Application Settings
APP_NAME="Kishai LLM Platform"
APP_VERSION="0.1.0"
DEBUG=false

# API Configuration
API_V1_PREFIX="/api/v1"

# Security Settings
# Generate with: just secret
SECRET_KEY="change-this-in-production-use-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_EXPIRE_DAYS=365

# Encryption
# Optional - will be auto-generated if not provided
ENCRYPTION_KEY=""

# Database Configuration
# For local development (SQLite)
DATABASE_URL="sqlite+aiosqlite:///./bku.db"

# For production (PostgreSQL)
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/kishai"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8000"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Ollama Configuration
DEFAULT_OLLAMA_HOST="http://localhost:11434"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Model Storage
MODEL_STORAGE_PATH="./models"

# Development Settings (remove in production)
RELOAD=true
